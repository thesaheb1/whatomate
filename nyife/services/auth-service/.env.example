NODE_ENV=development
PORT=3001
LOG_LEVEL=debug

# MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
DB_NAME=nyife_auth
DB_USER=nyife_auth
DB_PASS=auth_pass_change_me

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka
KAFKA_BROKERS=localhost:9092

# JWT
JWT_ACCESS_SECRET=change_me_access_secret_min_32_chars_xxxxxxxxxxx
JWT_REFRESH_SECRET=change_me_refresh_secret_min_32_chars_xxxxxxxxxx
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CSRF
CSRF_SECRET=change_me_csrf_secret_min_32_chars_xxxxxxxxxxxxxxx

# Cookies
COOKIE_DOMAIN=
COOKIE_SECURE=false
COOKIE_SAME_SITE=strict

# Bcrypt
BCRYPT_ROUNDS=12

# OAuth — Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/oauth/google/callback

# OAuth — Facebook
FACEBOOK_OAUTH_APP_ID=
FACEBOOK_OAUTH_APP_SECRET=
FACEBOOK_CALLBACK_URL=http://localhost:3000/api/v1/auth/oauth/facebook/callback

# SMTP (for verification emails)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@example.com
SMTP_PASS=your_smtp_password
SMTP_FROM_NAME=Nyife
SMTP_FROM_EMAIL=noreply@example.com

# Frontend URL (for redirect links in emails)
FRONTEND_URL=http://localhost:5173
